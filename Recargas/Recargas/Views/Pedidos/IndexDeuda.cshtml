@model IEnumerable<Recargas.Models.Pedido>

@{
    ViewBag.Title = "IndexDeuda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexDeuda</h2>

<p>
    @Html.ActionLink("Crear Nuevo Pedido", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Pedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Punto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Punto.Ruta.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Nome)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Pedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Punto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Punto.Ruta.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Nome)
            </td>

            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
