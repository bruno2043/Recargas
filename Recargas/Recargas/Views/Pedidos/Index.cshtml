@model IEnumerable<Recargas.Models.Pedido>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Pedidos", FormMethod.Get))
{
    <div class="form-horizontal" style="margin-top:30px;">
        <div class="form-group">
            @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*@Html.EnumDropDownList(model => model.Status, htmlAttributes: new { @class = "form-control" })*@
                @Html.DropDownList("FilterStatus", ViewBag.ListaStatus as SelectList, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                <input type="submit" value="Filtrar Pedidos" class="btn btn-default" />
            </div>
        </div>
    </div>
   
}

<hr style="border-top: 3px solid #ccc;"/>

<h2>Lista de Pedidos</h2>
<p>
    @Html.ActionLink("Crear Nuevo Pedido", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Pedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Punto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Punto.Ruta.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Nome)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha_Pedido)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Punto.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Punto.Ruta.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Persona.Nome)
    </td>

    <td>
        @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
    </td>
</tr>
    }

</table>
